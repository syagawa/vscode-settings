{
    "remote.SSH.lockfilesInTmp": true,
    "remote.SSH.showLoginTerminal": true,
    "remote.SSH.configFile": "C:\\Users\\xxx\\.ssh\\config",
    "sshfs.configs": [
        {
            "host": "xxx.xxx.xxx.xxx",
            "label": "label",
            "name": "name",
            "username": "xxx"
        }
    ],
    "workbench.editor.closeEmptyGroups": false,
    "workbench.editor.enablePreview": false,
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.colorCustomizations": {
        "editorWhitespace.foreground": "#808080",
        "editor.background": "#1f1f1d",
        "editor.foreground": "#ececec",
        "editorLineNumber.foreground": "#808080",
        "editorCursor.foreground": "#27a9ff",

        // "editor.selectionForeground": "#000000",
        "editor.selectionBackground": "#0abaffe5",
        "editor.selectionHighlightBackground": "#227df39f",
        
        "editor.findMatchBackground": "#00ff15c9",
        "editor.findMatchHighlightBackground": "#00ff155b",

        "editor.lineHighlightBackground": "#000000",
        "editor.lineHighlightBorder": "#3b3b3b",
        "editorIndentGuide.background": "#f2f2e9",
        "editorOverviewRuler.border": "#8f8f8f",
        // "editorOverviewRuler.findMatchForeground": "#f8e755",
        // "editorOverviewRuler.errorForeground": "#ff0000",
        "statusBar.background": "#000000",
        "statusBar.foreground": "#ffffff",
        "statusBar.border": "#000000",

        "menubar.selectionForeground": "#000000",
        "menubar.selectionBackground": "#aefa22",

        // "titleBar.activeBackground": "#dddddd",
        // "titleBar.activeForeground": "#000000",
        // "titleBar.inactiveBackground": "#ffffff",
        // "titleBar.inactiveForeground": "#808080",
        // "titleBar.border": "#d5d5d5",
        "tab.activeBorder": "#27a9ff"
    },
    "editor.wordWrap": "on",
    "editor.fontSize": 12,
    "editor.renderWhitespace": "all",
    "editor.tabSize": 2,
    "editor.glyphMargin": true,
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\wsl.exe",
    "workbench.iconTheme": "vs-minimal",
    "files.associations": {
        "*.pug": "jade",
        "*.erb": "erb"
    },
    "workbench.startupEditor": "newUntitledFile",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "vim.disableExtension": true,
    "vim.useSystemClipboard":true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "html"
    ],
    "emmet.includeLanguages": {
        "erb": "html"
    },
    "editor.lineNumbers": "on",
    "editor.bracketPairColorization.enabled": true
}
