// F1 and Open Keyboard Shortcuts(json)
// Place your key bindings in this file to override the defaults
[
  {
    "key": "alt+numpad1",
    "command": "layoutEditorGroups",
    "args": {
        "orientation": 1,
        "groups": [
            {"groups": [{"size": 1}]}
        ]
    }
  },
  {
    "key": "alt+numpad2",
    "command": "layoutEditorGroups",
    "args": {
        "orientation": 1,
        "groups": [
            {"groups": [{"size": 0.5},{"size": 0.5}]}
        ]
    }
  },
  {
    "key": "alt+numpad3",
    "command": "layoutEditorGroups",
    "args": {
        "orientation": 1,
        "groups": [
            {"groups": [{"size": 0.3},{"size": 0.3},{"size": 0.3}]}
        ]
    }
  },
  { "key": "alt+shift+f",
    "command": "workbench.action.findInFiles" 
  },
  {
    // for vim
    "key": "f12",
    "command": "toggleVim"
  }
]
